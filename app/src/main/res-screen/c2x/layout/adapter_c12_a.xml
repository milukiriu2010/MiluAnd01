<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="team"
            type="milu.kiriu2010.entity.team0.Team0Abs" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hvC12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivC12Logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:imageResource="@{team.logo}"
            tools:ignore="ContentDescription" />
        <!-- app:srcCompat="@drawable/ic_main" -->

        <TextView
            android:id="@+id/tvC12Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:text="@{team.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivC12Logo"
            app:layout_constraintTop_toTopOf="@+id/ivC12Logo"
            tools:text="Tigers" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
